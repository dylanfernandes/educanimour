
<div class="container" style="width: 100%;">
{{# each products }}
<div class="row" style="width: 100%;">
  {{# each this }}
  <div class="col">
    <div class="thumbnail">
      <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
      <div class="caption">
        <h3> {{this.title }} </h3>
        <p class = "description"> 
            {{this.description}}
        </p>
        <div class="clearfix">
            <div class="price pull-left" style="font-size: 20px;"> ${{ this.price }} </div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-danger pull-right" role="button"> Add to Shopping Cart </a>
        </div> 
      </div>
    </div>
  </div>
  {{/each}}
</div>    
{{/each}}
</div>

]
<div class="container">
  <h2>Modal Example</h2>


  <!-- Modal -->
  {{# if shopping_pressed }}
  <div class="modal fade in modalSet" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"> Shopping Cart List </h4>
        </div>
        <div class="modal-body">
            {{# if productsModal }}
        <div class="row">
  <div>
    <ul class="list-group">
        {{# each productsModal }}
            <li class="list-group-item"> 
                <span class="badge"> {{ this.qty }}</span>
                <strong> {{this.item.title }}</strong>
                <span class="label label-success"> ${{ this.price }} </span>
                <a href="#"> <i class="fa fa-close" aria-hidden="true" style="float:right; margin-right: 10px; color:black;"></i> </a>
                <a href="/remove/{{this.item._id}}">  <i class="fa fa-arrow-down" aria-hidden="true" style="float:right; margin-right: 10px; color:red;"></i></a>
                <a href="/add/{{this.item._id}}"> <i class="fa fa-arrow-up" aria-hidden="true" style="float:right; margin-right: 10px; color:green;"></i> </a>

            </li>
        {{/each}}


    </ul>  
  </div>
</div>

<div class="row">
  <div>
    <strong style="float:right; margin-right: 15px;"> Total: {{ totalPrice }}</strong>     
 </div>
</div>
{{ else }}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2> No Items in Cart </h2>
    </div> 
</div>
{{/if}}
        </div>
        <div class="modal-footer">
          <a href="/shopping-summary/"> <button type="button" class="btn btn-success" style="float: left"> Checkout </button> </a>
          <button type="button" class="btn btn-danger" data-dismiss="modal" ><a href="/" style="color:white;"> Close </a></button>
        </div>
      </div>
      
    </div>
  </div>
  {{/if}}
  
</div>
